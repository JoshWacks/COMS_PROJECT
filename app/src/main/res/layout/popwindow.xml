<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="450px" android:background="#64DD17"
                                                   android:id="@+id/relativeLayout">

    <TextView
            android:layout_width="105dp"
            android:layout_height="47dp" android:id="@+id/txtHeadingStation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="15dp"
            android:textColor="#000000" android:textStyle="bold"
            android:textAlignment="viewStart" android:textSize="18sp" android:fontFamily="@font/autour_one"
            android:text="Station:" android:layout_marginStart="15dp"/>
    <TextView
            android:layout_width="129dp"
            android:layout_height="44dp" android:id="@+id/txtHeadingEfficiency"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"
            android:textColor="#000000" android:textStyle="bold"
            android:textAlignment="viewStart" android:textSize="18sp" android:fontFamily="@font/autour_one"
            android:text="Efficiency:" android:layout_marginStart="15dp"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="58dp" android:id="@+id/txtEfficiency" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="61dp"
            android:textColor="#000000" android:textStyle="bold"
            android:textAlignment="textStart" android:textSize="16sp" android:fontFamily="@font/autour_one"
            android:layout_marginStart="130dp"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="60dp" android:id="@+id/txtStation" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:textColor="#000000" android:textStyle="bold"
            android:textSize="16sp" android:fontFamily="@font/autour_one"
            android:layout_marginStart="130dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>